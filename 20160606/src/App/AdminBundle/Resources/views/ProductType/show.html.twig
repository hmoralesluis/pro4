{% extends 'AdminBundle::layout.html.twig' %}

{% block title %}Pa√≠ses{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('bundles/admin/plugins/data-tables/DT_bootstrap.css') }}"/>
{% endblock %}

{% block content %}
    <div class="portlet box yellow">
        <div class="portlet-title">
            <div class="caption"><i class="icon-list"></i>Mostrar Tipo de Producto</div>
            <div class="tools">
                <a href="javascript:;" class="collapse"></a>
                <a href="#portlet-config" data-toggle="modal" class="config"></a>
                <a href="javascript:;" class="reload"></a>
                <a href="javascript:;" class="remove"></a>
            </div>
        </div>
        <div class="portlet-body">
            <div class="clearfix">
                <div class="btn-group">
                    <a href="{{ path('config_producttype') }}" class="btn green">
                        Volver al listado
                    </a>
                </div>
                <div class="btn-group pull-right">
                    {{ form(delete_form) }}
                </div>
            </div>

            <table class="table table-striped table-hover">
                <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ entity.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ entity.name }}</td>
                </tr>
                <tr>
                    <th>Active</th>
                    <td>{{ entity.active }}</td>
                </tr>
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
