{% extends 'AdminBundle::layout.html.twig' %}

{% block title %}Ebooks{% endblock %}

{% block stylesheets %}
    <link href="{{ asset('bundles/admin/css/pages/search.css') }}" rel="stylesheet" type="text/css"/>
    <link href="{{ asset('bundles/admin/css/pages/profile.css') }}" rel="stylesheet" type="text/css"
          xmlns="http://www.w3.org/1999/html"/>
{% endblock %}

{% block content %}
    <div class="portlet">
        <div class="portlet-title">
            <div class="caption"><i class="icon-star"></i>Ebooks</div>
            <div class="tools">
                <a href="javascript:;" class="collapse"></a>
            </div>
        </div>
        <div class="row-fluid add-portfolio">
            <div class="pull-left">
                <span>{{ entities | length }} Ebooks</span>
            </div>
            {% if is_granted('ROLE_ADMIN') %}
                <div class="pull-left">
                    <a href="{{ path('management_software_new') }}" class="btn icn-only green">Nuevo Software <i
                                class="m-icon-swapright m-icon-white"></i></a>
                </div>
            {% endif %}
            <div class="btn-group pull-right">
                <button class="btn dropdown-toggle" data-toggle="dropdown">Herramientas <i
                            class="icon-angle-down"></i>
                </button>
                <ul class="dropdown-menu pull-right">
                    <li><a href="#">Option 1</a></li>
                    <li><a href="#">Option 2</a></li>
                </ul>
            </div>
        </div>
        <div class="portlet-body">
            <div class="row-fluid">
                {% for entity in entities %}
                    <div class="row-fluid">
                        <div class="booking-blocks">
                            <div class="pull-left booking-img">
                                <img src="{{ asset('bundles/admin/img/gallery/image4.jpg') }}" alt="">
                                <ul class="unstyled">
                                    <li><i class="icon-desktop"></i>{{ entity.plataform }}</li>
                                    <li>{% if entity.activationCode %} <i
                                                class="icon-map-marker"></i> Código de Activación {% endif %}</li>
                                </ul>
                            </div>
                            <div style="overflow:hidden;">
                                <h2>
                                    <a href="{{ path('management_software_show', {'id' : entity.id}) }}">{{ entity.name }}</a>
                                </h2>
                                <ul class="unstyled inline">
                                    <li><i class="icon-star"></i></li>
                                    <li><i class="icon-star"></i></li>
                                    <li><i class="icon-star"></i></li>
                                    <li><i class="icon-star"></i></li>
                                    <li><i class="icon-star-empty"></i></li>
                                </ul>
                                <p> {{ entity.description }} <a href="#">ver más</a></p>
                            </div>
                        </div>
                    </div>
                    <hr>
                {% endfor %}
                <div class="spac40"></div>
                <div class="pagination pagination-centered">
                    <ul>
                        <li><a href="#">Prev</a></li>
                        <li><a href="#">1</a></li>
                        <li><a href="#">2</a></li>
                        <li class="active"><a href="#">3</a></li>
                        <li><a href="#">4</a></li>
                        <li><a href="#">5</a></li>
                        <li><a href="#">Next</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
{% endblock %}