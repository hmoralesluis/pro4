{% extends 'AdminBundle::layout.html.twig' %}

{% block title %}Red de Negocios{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" type="text/css"
          href="{{ asset('bundles/admin/plugins/select2/select2_metro.css') }}"/>
    <link rel="stylesheet" href="{{ asset('bundles/admin/plugins/data-tables/DT_bootstrap.css') }}"/>
{% endblock %}

{% block content %}
    <div class="portlet">
        <div class="portlet-title">
            <div class="caption"><i class="icon-user"></i>Red de Negocios</div>
            <div class="tools">
                <a href="javascript:;" class="collapse"></a>
            </div>
        </div>
        <div class="portlet-body">
            <div class="row-fluid profile">
                <div class="span12">
                    <div class="clearfix">
                        <div class="btn-group pull-right">
                            <button class="btn dropdown-toggle" data-toggle="dropdown">Herramientas <i
                                        class="icon-angle-down"></i>
                            </button>
                            <ul class="dropdown-menu pull-right">
                                <li><a href="#">Imprimir</a></li>
                                <li><a href="#">Salvar como PDF</a></li>
                                <li><a href="#">Exportar a Excel</a></li>
                            </ul>
                        </div>
                    </div>
                    <table class="table table-striped table-hover" id="network">
                        <thead>
                        <tr>
                            <th>Usuario</th>
                            <th class="hidden-480">Nombre</th>
                            <th class="hidden-480">Apellidos</th>
                            <th class="hidden-480">Membresía</th>
                            <th class="hidden-480">Registro</th>
                            <th class="hidden-480">País</th>
                            <th class="hidden-480">Generación</th>
                            <th class="hidden-480">Posición</th>
                            <th>Estado</th>
                            <th></th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for user in network %}
                            <tr class="odd gradeX">
                                <td>{{ user.username }}</td>
                                {% if user in firstGeneration %}
                                    <td class="hidden-phone">{{ user.name }}</td>
                                    <td class="hidden-phone">{{ user.lastname }}</td>
                                    <td class="hidden-phone">{{ user.role.name }}</td>
                                    <td class="hidden-phone">{{ user.SignUpDate | date('Y-m-d') }}</td>
                                    <td class="hidden-phone">{{ user.country.name }}</td>
                                    <td class="hidden-phone">{{ user.generation }}</td>
                                    <td class="hidden-phone">{{ user.positionInGeneration }}</td>
                                    <td>
                                        <span {% if user.active %} class="label label-success" {% else %} class="label label-important" {% endif %}>{% if user.active %} activo {% else %} inactivo {% endif %}</span>
                                    </td>
                                    <td><a class="btn mini red-stripe" href="#">View</a></td>
                                {% else %}
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                {% endif %}
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script type="text/javascript" src="{{ asset('bundles/admin/plugins/select2/select2.min.js') }}"></script>
    <script type="text/javascript"
            src="{{ asset('bundles/admin/plugins/data-tables/jquery.dataTables.js') }}"></script>
    <script type="text/javascript"
            src="{{ asset('bundles/admin/plugins/data-tables/DT_bootstrap.js') }}"></script>
    <script src="{{ asset('bundles/admin/scripts/table-managed.js') }}"></script>
    <script>
        TableManaged.init();
    </script>
{% endblock %}

