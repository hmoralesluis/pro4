{% extends 'AdminBundle::layout.html.twig' %}

{% block title %}Envio de Mensajes{% endblock %}

{% block stylesheets %}
    <link href="{{ asset('bundles/admin/css/pages/profile.css') }}" rel="stylesheet" type="text/css"
          xmlns="http://www.w3.org/1999/html"/>
    <link rel="stylesheet" type="text/css"
          href="{{ asset('bundles/admin/plugins/select2/select2_metro.css') }}"/>
    <link rel="stylesheet" href="{{ asset('bundles/admin/plugins/data-tables/DT_bootstrap.css') }}"/>
{% endblock %}

{% block content %}
    <div class="row-fluid inbox">
        <div class="span2">
            <ul class="inbox-nav margin-bottom-10">
                <li class="compose-btn">
                    <a href="{{ path('management_user_compose') }}" data-title="Compose" class="btn green">
                        <i class="icon-edit"></i> Nuevo Mensaje
                    </a>
                </li>
                <li class="inbox active">
                    <a href="{{ path('management_user_message') }}" class="btn" data-title="Inbox">Recibidos ({{ listaemail | length }})</a>
                    <b></b>
                </li>
                <li class="sent"><a class="btn" href="javascript:;"  data-title="Sent">Enviados</a><b></b></li>
            </ul>
        </div>
        <div class="span10">
            <div class="inbox-header">
                <h1 class="pull-left">
                {% block titlemessage %}
                {% endblock %}
                </h1>
                <form action="#" class="form-search pull-right">
                    <div class="input-append">
                        <input class="m-wrap" type="text" placeholder="Search Mail">
                        <button class="btn green" type="button">Buscar</button>
                    </div>
                </form>
            </div>
            <!--<div class="inbox-loading">Loading...</div>-->
            <div class="inbox-content">
            {% block cuerpo %}
            {% endblock %}
            </div>
        </div>

    </div>
{% endblock %}