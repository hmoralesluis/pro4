{% extends 'AdminBundle:Email:message.html.twig' %}

{% block titlemessage %}Bandeja de Entrada{% endblock %}

{% block cuerpo %}
    <div class="tabbable tabbable-custom tabbable-custom-profile">
        <table class="table table-striped table-advance table-hover" id="network">
            <thead>
            <tr>
                <th><i class="icon-picture"></i> De</th>
                <th><i class="icon-user"></i> Asunto</th>
                <th class="hidden-480"><i class="icon-group"></i> Fecha</th>
            </tr>
            </thead>
            <tbody>
                {% for datos in listaemail %}
                    <tr>
                        <td>{{ datos.sender }}</td>
                        <td class="highlight">

                                <div class="portlet-body">
                                    <!-- Button to trigger modal -->
                                    <a href="#myModal3" data-toggle="modal">{{ datos.asunto }}</a>
                                    <!-- Modal -->
                                    <div id="myModal3" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel3" aria-hidden="true">
                                        <div class="modal-header">
                                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                                            <h1 id="myModalLabel3">Mensaje Recibido</h1>
                                                <h4 id="myModalLabel3">De: {{ datos.sender }}</h4>
                                                    <h4 id="myModalLabel3">Fecha:</h4>
                                            <h4 id="myModalLabel3">Asunto: {{ datos.asunto }}</h4>
                                        </div>
                                        <div class="modal-body">
                                            <p>{{ datos.body }}</p>
                                        </div>
                                        <div class="modal-footer">
                                            <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
                                            <button data-dismiss="modal" class="btn blue">Responder</button>
                                        </div>
                                    </div>
                                </div>
                        </td>
                        <td class="hidden-phone"></td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

    </div>
{% endblock %}