{% extends 'AdminBundle::layout.html.twig' %}

{% block title %}Plan de Compensación{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('bundles/admin/plugins/data-tables/DT_bootstrap.css') }}"/>
{% endblock %}

{% block content %}
    <div class="portlet box yellow">
        <div class="portlet-title">
            <div class="caption"><i class="icon-list"></i>Mostrar Plan</div>
            <div class="tools">
                <a href="javascript:;" class="collapse"></a>
                <a href="#portlet-config" data-toggle="modal" class="config"></a>
                <a href="javascript:;" class="reload"></a>
                <a href="javascript:;" class="remove"></a>
            </div>
        </div>
        <div class="portlet-body">
            <div class="clearfix">
                <div class="btn-group">
                    <a href="{{ path('config_compensationplan') }}" class="btn green">
                        Volver al listado
                    </a>
                </div>
                <div class="btn-group pull-right">
                    {{ form(delete_form) }}
                </div>
            </div>

            <table class="table table-striped table-hover">
                <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ entity.id }}</td>
                </tr>
                <tr>
                    <th>Nombre</th>
                    <td>{{ entity.name }}</td>
                </tr>
                <tr>
                    <th>Descripción</th>
                    <td>{{ entity.description }}</td>
                </tr>
                <tr>
                    <th>Porciento</th>
                    <td>{{ entity.percentage }}</td>
                </tr>
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script>
        {% for flashMessage in app.session.flashbag.get('notice') %}
        Codes.showMessage('Información', '{{ flashMessage  }}');
        {% endfor %}
    </script>
{% endblock %}
