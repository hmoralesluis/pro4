{% extends 'AdminBundle::layout.html.twig' %}

{% block title %}Configuración de Países{% endblock %}

{% block stylesheets %}
    <link href="{{ asset('bundles/admin/css/pages/search.css') }}" rel="stylesheet" type="text/css"
          xmlns="http://www.w3.org/1999/html"/>
    <link href="{{ asset('bundles/admin/css/pages/profile.css') }}" rel="stylesheet" type="text/css"
          xmlns="http://www.w3.org/1999/html"/>
{% endblock %}

{% block content %}
<!-- BEGIN SAMPLE FORM PORTLET-->
<div class="portlet box blue">
    <div class="portlet-title">
        <div class="caption"><i class="icon-reorder"></i>Configuración de Países</div>
        <div class="tools">
            <a href="javascript:;" class="collapse"></a>
            <a href="#portlet-config" data-toggle="modal" class="config"></a>
            <a href="javascript:;" class="reload"></a>
            <a href="javascript:;" class="remove"></a>
        </div>
    </div>
    <div class="portlet-body form">
        <!-- BEGIN FORM-->
        <form action="#" class="form-horizontal">
            <div class="control-group">
                <label class="control-label">Países</label>
                <div class="controls">
                    <select name="country" id="country" class="m-wrap span8">
                        {% for country in countries %}
                            <option {% if entity.country.Alpha2Code == country.Alpha2Code %} selected {% endif %}value="{{ country.Alpha2Code }}">{{ country.name }}</option>
                        {% endfor %}
                    </select>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">Introducir nuevo país</label>
                <div class="controls">
                    <input type="text" class="span8 m-wrap" />
                </div>
            </div>

            <div class="form-actions">
                <button type="submit" class="btn blue">Guardar Cambios</button>
                <button type="button" class="btn">Cancel</button>
            </div>
        </form>
        <!-- END FORM-->
    </div>
</div>
<!-- END SAMPLE FORM PORTLET-->

{% endblock %}